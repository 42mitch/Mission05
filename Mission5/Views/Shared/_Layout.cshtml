<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pickleball with Mitchell</title>

    <!-- Custom favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header class="site-header">
    <div class="container">
        <h1 class="site-title">Pickleball with Mitchell</h1>
        <nav class="site-nav">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <span class="nav-sep">|</span>
            <a asp-controller="Home" asp-action="Calculator">Tutoring Calculator</a>
        </nav>
    </div>
</header>

<div class="container main-content">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="site-footer">
    <div class="container">
        <p>© @DateTime.Now.Year Mitchell Hansen | IS 413 Mission #5</p>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

@RenderSection("Scripts", required: false)
</body>
</html>